    "@typescript-eslint/parser": "^3.9.0",
    "chai": "^4.2.0",
    "eslint": "^7.7.0",
    "mocha": "^8.1.1",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
